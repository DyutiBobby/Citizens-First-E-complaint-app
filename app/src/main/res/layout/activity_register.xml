<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1"
    tools:context=".Register">

    <EditText
        android:id="@+id/registerName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#FAF9F5"
        android:backgroundTint="#656363"
        android:ems="10"
        android:hint="Enter Name:"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F8F1F1"
        android:textColorHint="#EFE3E3"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#FAF9EE"
        android:backgroundTint="#656363"
        android:ems="10"
        android:hint="Enter Aadhar number:"
        android:inputType="textPassword"
        android:textColor="#F8F0F0"
        android:textColorHint="#FAF5F5"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289" />

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#FAF9F3"
        android:backgroundTint="#656363"
        android:ems="10"
        android:hint="Enter Email:"
        android:inputType="textEmailAddress"
        android:textColor="#FBF5F5"
        android:textColorHint="#F8F0F0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <EditText
        android:id="@+id/registerPhone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#FAF8E9"
        android:backgroundTint="#656363"
        android:ems="10"
        android:hint="Enter Phone:"
        android:inputType="phone"
        android:textColor="#F6F0F0"
        android:textColorHint="#EFE9E9"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367" />

    <CheckBox
        android:id="@+id/isAdmin"
        android:layout_width="184dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="#656363"
        android:buttonTint="@color/white"
        android:checked="false"
        android:text="Register as admin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F44336"
        android:textColorHighlight="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <CheckBox
        android:id="@+id/isUser"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="#656363"
        android:buttonTint="@color/design_default_color_surface"
        android:drawableBottom="@color/white"
        android:selectAllOnFocus="false"
        android:text="Register as user"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FF9800"
        android:textColorHighlight="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/RegisterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />

    <Button
        android:id="@+id/gotoLogin"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:text="Login"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />


</androidx.constraintlayout.widget.ConstraintLayout>